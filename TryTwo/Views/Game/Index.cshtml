@{
}
@section Styles {
    <link href="~/css/battleship.css" rel="stylesheet">
}

<div id="gameArea">
    <div class="footer htmlpreview-fallback">

    </div>
</div>


@section Scripts {
    <script src="~/js/battleships.js"></script>
    <script>
        window.onload = function () {
            var game = new BattleShipsGame('gameArea');
            game.setPlayerSession(@ViewBag.playerId, @ViewBag.sessionId)
            game.run();
            // fallback для htmlpreview
            game.startNewGame();
        }
    </script>
}


